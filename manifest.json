{
  "name": "Kinopoisk Poster Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"],
      "all_frames": false,
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["*://*/*", "tabs", "webRequest", "activeTab", "storage"]
}
