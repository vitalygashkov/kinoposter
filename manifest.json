{
  "name": "Kinoposter",
  "version": "0.0.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://*.kinopoisk.ru/*"],
      "js": ["content-script.js"],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["*://*/*", "tabs", "webRequest", "activeTab", "storage"]
}
